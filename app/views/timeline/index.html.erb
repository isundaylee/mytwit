<h1>Timeline</h1><br />

<div class="row">
	<%= form_for :tweet, url: tweets_path do |f| %>
        <div class="span10">
        	<%= f.text_area :content, rows: 6, class: "tweetsheet-sheet", value: flash[:saved_tweet_content] %>
        </div>
        <div class="span2">
        	<%= f.submit 'Tweet!', class: "btn btn-primary tweetsheet-button" %>
        	<button class="btn btn-primary tweetsheet-button" id="tweetsheet-clear-button">Clear</button>
        	<small class="center tweetsheet-wordcount tweetsheet-wordcount"><span id="tweetsheet-remaining">140</span> chars remaining. </small>
        </div>
	<% end %>
</div>

<%= render('tweets_list', tweets: @tweets) %>



